<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent">
  <TextView
    android:id="@+id/pass_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="7dp"
    android:text="@string/add_new_address" />

  <AutoCompleteTextView
    android:id="@+id/autoCompleteTextViewSettings"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:layout_marginRight="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/background_authorization_et"
    android:hint="@string/input_adress_onsetting"
    android:inputType="text"
    android:maxLines="1"
    android:singleLine="true"
    android:textSize="15sp"
    android:layout_below="@+id/pass_tv"
    android:layout_alignStart="@+id/pass_tv" />
  <ImageButton
    android:id="@+id/btn_clear"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="7dp"
    android:background="@drawable/btn_clear"
    android:layout_alignBottom="@+id/autoCompleteTextViewSettings"
    android:layout_alignEnd="@+id/autoCompleteTextViewSettings" />
</RelativeLayout>