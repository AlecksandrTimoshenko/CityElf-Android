<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="10dp"
  android:padding="10dp">

    <TextView
      android:id="@+id/tvAdvertTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Title"
      android:textAppearance="@style/TextFontBold"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@+id/tvAdvertTime"/>

  <TextView
    android:id="@+id/tvAdvertAddress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvAdvertTitle"
    android:text="Address"
    android:textAppearance="@style/TextFontStandard"/>

  <TextView
    android:id="@+id/tvAdvertTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Time"
    android:layout_alignParentEnd="true"
    android:textAppearance="@style/TextFontBold"/>

  <TextView
    android:id="@+id/tvAdvertContent"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvAdvertAddress"
    android:paddingTop="5dp"
    android:text="Content"
    android:textAppearance="@style/TextFontStandard"/>

</RelativeLayout>