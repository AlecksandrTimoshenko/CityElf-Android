<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tvAdminPollHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/fragment_admin_poll_header"
        android:textAppearance="@style/TextFontBold" />

      <TextView
        android:id="@+id/tvAdminPollName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/fragment_admin_poll_name"
        android:textAppearance="@style/TextFontBold" />

      <EditText
        android:id="@+id/etAdminPollName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/background_admin_et"
        android:gravity="center_vertical"
        android:textSize="14sp" />

      <TextView
        android:id="@+id/tvAdminPollAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/fragment_admin_poll_address"
        android:textAppearance="@style/TextFontBold" />

      <TextView
        android:id="@+id/tvAdminPollAddressContent"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/background_admin_tv"
        android:gravity="center_vertical"
        android:textSize="14sp" />

      <TextView
        android:id="@+id/tvAdminPollContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/fragment_admin_poll_content"
        android:textAppearance="@style/TextFontBold" />

      <EditText
        android:id="@+id/etAdminPollContent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:background="@drawable/background_admin_et"
        android:gravity="start"
        android:textSize="14sp" />

      <TextView
        android:id="@+id/tvAdminPollVariants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/fragment_admin_poll_variants"
        android:textAppearance="@style/TextFontBold" />

      <EditText
        android:id="@+id/etAdminPollVariant1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/background_admin_et"
        android:gravity="center_vertical"
        android:textSize="14sp" />

      <EditText
        android:id="@+id/etAdminPollVariant2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/background_admin_et"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone" />

      <EditText
        android:id="@+id/etAdminPollVariant3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/background_admin_et"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone" />

      <EditText
        android:id="@+id/etAdminPollVariant4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/background_admin_et"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:visibility="gone" />

      <TextView
        android:id="@+id/tvAdminPollAddVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/fragment_admin_poll_add_variant"
        android:textAppearance="@style/TextFontStandard" />

      <TextView
        android:id="@+id/tvAdminPollVotePeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/fragment_admin_poll_period"
        android:textAppearance="@style/TextFontBold" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
          android:id="@+id/etAdminPollPeriodStart"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_weight="1"
          android:layout_marginTop="8dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="5dp"
          android:paddingStart="5dp"
          android:paddingEnd="5dp"
          android:background="@drawable/background_admin_et"
          android:gravity="center_vertical"
          android:hint="@string/fragment_admin_poll_start"
          android:inputType="date"
          android:textColorHint="@color/colorText"
          android:textSize="14sp" />

        <EditText
          android:id="@+id/etAdminPollPeriodEnd"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_weight="1"
          android:layout_marginTop="8dp"
          android:layout_marginStart="5dp"
          android:layout_marginEnd="10dp"
          android:paddingStart="5dp"
          android:paddingEnd="5dp"
          android:background="@drawable/background_admin_et"
          android:gravity="center_vertical"
          android:hint="@string/fragment_admin_poll_finish"
          android:inputType="date"
          android:textColorHint="@color/colorText"
          android:textSize="14sp" />

      </LinearLayout>

      <Button
        android:id="@+id/btnAdminPollAdd"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_admin_et"
        android:text="@string/fragment_admin_poll_add_button"
        android:textAllCaps="false"
        android:textAppearance="@style/TextFontBold" />

    </LinearLayout>

  </ScrollView>

  <View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:background="@android:color/darker_gray" />

  <ListView
    android:id="@+id/lvAdminPollList"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

</LinearLayout>