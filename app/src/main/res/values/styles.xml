<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryDark">@color/mint</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <style name="DialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@color/colorDialogBackground</item>
    </style>
    <style name="TextFontHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#8492A6</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextFontStandard" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#8492A6</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextFontBold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#8492A6</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextFontOpacity" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#708492A6</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>